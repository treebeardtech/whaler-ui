{
  "name": "whaler-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/color-hash": "^1.0.0",
    "@types/d3": "^6.2.0",
    "@types/d3-dsv": "^2.0.0",
    "@types/d3-hierarchy": "^2.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "axios": "^0.21.1",
    "color-hash": "^1.0.3",
    "d3": "^6.3.1",
    "d3-dsv": "^2.0.0",
    "d3-hierarchy": "^2.0.0",
    "filesize": "^6.1.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "react-virtualized-auto-sizer": "^1.0.3",
    "react-vtree": "^3.0.0-beta.0",
    "react-window": "^1.8.6",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:fix": "yarn prettier --write .",
    "lint": "yarn prettier --check .",
    "clean": "rm -rf dist build",
    "dist": "yarn clean && yarn build && mkdir -p dist/html && cp -R build/* dist/html && cd dist && tar -czvf html.tgz html",
    "fix": "yarn lint:fix && tsc",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
